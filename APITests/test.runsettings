<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- 테스트 실행 설정 -->
  <TestRunParameters>
    <!-- KMS API 기본 URL -->
    <Parameter name="BaseUrl" value="https://localhost:7025" />
    
    <!-- 테스트용 클라이언트 GUID (실제 등록된 클라이언트의 GUID로 변경하세요) -->
    <Parameter name="TestClientGuid" value="d0025027-2efc-4038-8c6a-1b3f7c314ef3" />
  </TestRunParameters>
  
  <!-- MSTest 설정 -->
  <MSTest>
    <Parallelize>
      <Workers>4</Workers>
      <Scope>MethodLevel</Scope>
    </Parallelize>
  </MSTest>
  
  <!-- 로깅 설정 -->
  <LoggerRunSettings>
    <Loggers>
      <Logger friendlyName="console" enabled="True">
        <Configuration>
          <Verbosity>detailed</Verbosity>
        </Configuration>
      </Logger>
    </Loggers>
  </LoggerRunSettings>
</RunSettings>

