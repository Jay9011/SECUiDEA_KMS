@model SECUiDEA_KMS.Models.ClientListDTO
@{
    ViewData["Title"] = "클라이언트 관리";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>클라이언트 관리</h2>
        <a asp-action="AddClient" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> 새 클라이언트 추가
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model?.Clients?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>상태</th>
                                <th>클라이언트명</th>
                                <th>GUID</th>
                                <th>IP 주소</th>
                                <th>검증 모드</th>
                                <th>마지막 접근</th>
                                <th>생성일</th>
                                <th>작업</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var client in Model.Clients)
                            {
                                <tr>
                                    <td>
                                        @if (client.IsActive ?? false)
                                        {
                                            <span class="status-indicator status-active" title="활성"></span>
                                        }
                                        else
                                        {
                                            <span class="status-indicator status-inactive" title="비활성"></span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@client.ClientName</strong>
                                        @if (!string.IsNullOrEmpty(client.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@client.Description</small>
                                        }
                                    </td>
                                    <td>
                                        <code class="small">@client.ClientGuid</code>
                                    </td>
                                    <td>@client.ClientIP</td>
                                    <td>
                                        <span class="badge bg-@(client.IPValidationMode == "Strict" ? "warning" : "secondary")">
                                            @client.IPValidationMode
                                        </span>
                                    </td>
                                    <td>
                                        @if (client.LastAccessAt.HasValue)
                                        {
                                            <span title="@client.LastAccessAt.Value.ToString("yyyy-MM-dd HH:mm:ss")">
                                                @client.LastAccessAt.Value.ToString("yyyy-MM-dd HH:mm")
                                            </span>
                                            @if (!string.IsNullOrEmpty(client.LastAccessIP))
                                            {
                                                <br />
                                                <small class="text-muted">@client.LastAccessIP</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span title="@client.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")">
                                            @client.ClientIP
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="ClientDetail" asp-route-guid="@client.ClientGuid" 
                                           class="btn btn-sm btn-outline-primary">
                                            상세보기
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- 페이징 -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="클라이언트 페이지 네비게이션">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" asp-action="Clients" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">
                                    이전
                                </a>
                            </li>

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Clients" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" asp-action="Clients" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">
                                    다음
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <div class="text-center text-muted">
                        <small>전체 @Model.TotalCount 개 중 @((Model.PageNumber - 1) * Model.PageSize + 1) - @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)개 표시</small>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">등록된 클라이언트가 없습니다.</p>
                    <a asp-action="AddClient" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> 첫 클라이언트 추가하기
                    </a>
                </div>
            }
        </div>
    </div>
</div>

